{
  "name": "regifarm-pro",
  "productName": "RegiFarm Pro",
  "version": "1.0.0",
  "description": "Desktop Application for Beef Cattle Farm Management",
  "author": {
    "name": "Regentia",
    "email": "support@regentia.it"
  },
  "main": "electron-app/src/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "webpack serve --config webpack.config.js --mode development",
    "dev:electron": "wait-on http://localhost:3000 && electron electron-app/src/main/main.js --dev",
    "dev:backend": "cd backend && python3 -m uvicorn app.main:app --reload --port 8000",
    "build": "npm run build:frontend && npm run clean:build && npm run build:electron",
    "build:frontend": "webpack --mode production",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "npm run clean:build && electron-builder --mac",
    "build:mac:x64": "npm run clean:build && electron-builder --mac --x64",
    "build:mac:arm64": "npm run clean:build && electron-builder --mac --arm64",
    "build:linux": "electron-builder --linux",
    "start": "electron electron-app/src/main/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint electron-app/src --ext .js,.jsx",
    "lint:fix": "eslint electron-app/src --ext .js,.jsx --fix",
    "format": "prettier --write \"electron-app/src/**/*.{js,jsx,json,css}\"",
    "check": "npm run lint && npm run test",
    "clean": "rimraf dist build electron-app/output && hdiutil detach /Volumes/RegiFarm\\ Pro 2>/dev/null || true",
    "clean:build": "rimraf dist/mac dist/mac-arm64",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-sqlite": "npx electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.regentia.regifarmpro",
    "productName": "RegiFarm Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron-app/**/*",
      "backend/**/*",
      "shared/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron-app/public/icons/icon.icns",
      "category": "public.app-category.business"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      },
      "format": "UDZO"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron-app/public/icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.1.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@supabase/supabase-js": "^2.81.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.6.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.10.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
